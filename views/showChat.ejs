<%- include("./partials/header")  %> 

    <div class="container-fluid p-3">
        <div class="hero-text mb-3">
            <h1 class="">Chat</h1>
        </div>  

        <div class="row justify-content-between">            
            <div class="col-md-4 p-2 chat-list">
                <% if (role === "customerLocal") { %>
                    <h4 class="">Restaurant Name</h4>
                        <div class="chat-list-store d-flex justify-content-between my-4">
                            <span><i class="fas fa-user p-1"></i><%= chat.store.name %> </span>
                            <form action="/chat/<%= chat.store._id %>/<%= chat.customer._id %>" method="GET">
                                <button type="submit" class="custom-btn d-inline m-0">Message</button>
                            </form>
                        </div>                              
                <% } else { %>
                    <h4 class="">Customer username</h4>
                        <div class="chat-list-store d-flex justify-content-between my-4">
                            <span><i class="fas fa-user p-1"></i><%= chat.customer.username %> </span>
                            <form action="/chat/<%= chat.store._id %>/<%= chat.customer._id %>" method="GET">
                                <button type="submit" class="custom-btn d-inline m-0">Message</button>
                            </form>
                        </div>                 
                <% } %>  
            </div>
            <div class="col-md-7 chat-container">
                <div class="chat-header d-flex justify-content-between p-2">
                    <% if (role === "customerLocal") { %>
                        <h4><%= chat.store.name %></h4>  
                    <% } else { %>
                        <h4><%= chat.customer.username %></h4>                      
                    <% } %>

                    <h4>Chat</h4>
                    <h4><i class="fas fa-window-close"></i></h4>
                </div>
                <div class="chat-body">
                    <% chat.messages.forEach(message => { %>
                        <span><%= message.name %>:  </span>
                        <span><%= message.message %> </span>
                        <br>
                    <% }) %>
                </div>
                <div class="chat-send d-flex">
                    <form action="/chat/<%= chat.store._id %>/<%= chat.customer._id %> " method="POST">
                        <textarea name="message" id="chat-message" cols="100" rows="2"></textarea>
                        <button type="submit" id="send" class="custom-btn m-0">Send</button>               
                </form>
                </div>
            </div>
        </div>
    </div>


    
 
<%- include("./partials/footer")  %> 